{
  "name": "back-end-starter",
  "version": "1.0.0",
  "description": "A starter project for nodejs back-end at Nightborn",
  "author": "Nightborn",
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "yarn nodemon | bunyan -o short",
    "build": "yarn tsc",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "test": "jest",
    "db:generate": "kysely-codegen --dialect postgres --out-file ./src/repositories/database/models.ts",
    "db:migrate:up": "yarn ts-node ./src/repositories/database/run-migrations.ts up",
    "db:migrate:down": "yarn ts-node ./src/repositories/database/run-migrations.ts down",
    "graphql:generate": "graphql-codegen --config src/graphql/codegen.yaml && yarn format",
    "graphql:generate:watch": "graphql-codegen -w --config src/graphql/codegen.yaml"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@apollo/subgraph": "^2.5.6",
    "@faker-js/faker": "^8.0.0",
    "@getbrevo/brevo": "^2.0.0-beta.4",
    "@google-cloud/logging-bunyan": "^5.0.1",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.8",
    "@types/cookie-parser": "^1.4.6",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^8.4.1",
    "express-request-context": "^1.0.1",
    "firebase": "^10.8.1",
    "firebase-admin": "^12.0.0",
    "graphql": "^16.8.1",
    "joi": "^17.12.2",
    "kysely": "^0.27.0",
    "lodash": "^4.17.21",
    "pg": "^8.11.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@eddeee888/gcg-typescript-resolver-files": "^0.7.1",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "4.0.6",
    "@graphql-codegen/typescript-resolvers": "4.0.6",
    "@graphql-tools/mock": "^9.0.0",
    "@parcel/watcher": "^2.4.1",
    "@testcontainers/postgresql": "^10.9.0",
    "@types/bunyan": "^1.8.11",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.196",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^9.0.2",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "kysely-codegen": "^0.11.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.2",
    "tsconfig-paths": "^4.2.0",
    "validate-branch-name": "^1.3.0"
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop){1}$|^(feat|feature|chore|fix|hotfix|release)/.+$",
    "errorMsg": "The branch name is not correct. The branch name should follow the following pattern : ^(master|main|develop){1}$|^(feat|feature|chore|fix|hotfix|release)/.+$"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [],
    "exec": "node --inspect=0.0.0.0:9229 -r ts-node/register -r tsconfig-paths/register ./src/index.ts"
  }
}
